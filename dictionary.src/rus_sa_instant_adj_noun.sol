     correlate {
                1:РОД=3:РОД 1:ЧИСЛО=3:ЧИСЛО 1:ПАДЕЖ=3:ПАДЕЖ
                2:РОД=3:РОД 2:ЧИСЛО=3:ЧИСЛО 2:ПАДЕЖ=3:ПАДЕЖ
               }
   then
    {
     if or(
           context { Предлог         * * * },
           context { Существительное * * * },
           context { _НАЧ            * * * },
           context { Глагол          * * * },
           context { Инфинитив       * * * },
           context { Деепричастие    * * * },
           context { Местоимение     * * * },
           context { Местоим_Сущ     * * * },
           context { ЕСЛИ            * * * }
          )
      then
       {
        context { 0 3.{ <ATTRIBUTE>1 <ATTRIBUTE>2 } } 
       }       
    }    
 } 





