// Иной раз она бывала  грустна и несчастна
// ^^^^^^^^
tree_scorer СущКакОбстВремени language=Russian
{
 if context { СущКакОбстСпособа{ падеж:вин число:ед }.прилагательное:*{ падеж:вин число:ед } }
