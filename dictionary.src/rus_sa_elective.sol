
// Разбор элективных конструкций:
// один из четверых резко сбросил капюшон
// ^^^^^^^^^^^^^^^^

patterns ЭлективГолова export { node:root_node ПАДЕЖ РОД ЧИСЛО ОДУШ }


wordentry_set ЭлективнПрил=прилагательное:
{
 один,
 каждый,
 который,
 какой,
 "какой-то",
 весь,
 всякий,
 немногий,
 многий,
 любой
}


pattern ЭлективГолова
{
 прилагательное:*{ СТЕПЕНЬ:АТРИБ ~КРАТКИЙ ЭлективнПрил }:export { ПАДЕЖ ЧИСЛО РОД ОДУШ node:root_node }
}


// лишь немногие из них смогли уснуть
// ^^^^^^^^^^^^^^^^^^^^
wordentry_set ЛишьТолько=наречие:{ лишь, только, совсем }
pattern ЭлективГолова
{
 adv=ЛишьТолько
 a=прилагательное:*{ СТЕПЕНЬ:АТРИБ ~КРАТКИЙ ЭлективнПрил }:export { ПАДЕЖ ЧИСЛО РОД ОДУШ node:root_node }
}
: links { a.<ATTRIBUTE>adv }

