// некоторые из них были заняты
// ^^^^^^^^^^^^^^^^
pattern СущСПредложДоп export { ЧИСЛО РОД ПАДЕЖ ОДУШ node:root_node }
{
 n=ЭлективГолова:export { ЧИСЛО РОД ПАДЕЖ ОДУШ node:root_node }
 prep=предлог:из{}
 obj=ГлДополнение{ ПАДЕЖ:РОД }
}
: links { n.<PREPOS_ADJUNCT>prep.<OBJECT>obj }
: ngrams { 1 }


